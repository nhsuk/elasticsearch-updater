{
  "name": "elasticsearch-updater",
  "version": "1.0.0",
  "description": "Updates an Elasticsearch instance from a JSON file",
  "main": "scheduler.js",
  "repository": "https://github.com/nhsuk/elasticsearch-updater.git",
  "author": "Mark Harrop",
  "license": "MIT",
  "scripts": {
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "generate-coverage": "yarn istanbul -- cover _mocha -- --recursive",
    "git-hook": "yarn lint",
    "istanbul": "NODE_ENV=test istanbul",
    "lint": "eslint --ext .js,.json .",
    "postrewrite": "yarn git-hook",
    "precommit": "yarn git-hook",
    "prepush": "yarn git-hook",
    "snyk": "snyk",
    "snyk-travis": "yarn snyk -- test --org=nhsuk && yarn snyk -- monitor --org=nhsuk",
    "start": "node app.js",
    "test": "NODE_ENV=test mocha --recursive test",
    "test-unit": "NODE_ENV=test mocha --recursive test/unit",
    "test-integration": "NODE_ENV=test mocha --recursive test/integration",
    "test-watch": "yarn test -- --watch --reporter min",
    "test-watch-unit": "yarn test-unit -- --watch --reporter min",
    "travis": "yarn lint && yarn generate-coverage && yarn check-coverage && yarn upload-coverage-coveralls && yarn snyk-travis",
    "upload-coverage-coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "elasticsearch",
    "nhsuk"
  ],
  "devDependencies": {
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-nhsuk": "^0.3.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.10.1",
    "eslint-watch": "^3.1.1",
    "husky": "^0.14.3",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.4.2",
    "nock": "^9.0.13",
    "snyk": "^1.36.2"
  },
  "dependencies": {
    "elasticsearch": "^13.2.0",
    "moment": "^2.18.1",
    "nhsuk-bunyan-logger": "^1.3.0",
    "node-schedule": "^1.2.3",
    "require-environment-variables": "^1.1.2"
  }
}
